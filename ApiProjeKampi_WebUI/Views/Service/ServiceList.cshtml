@using ApiProjeKampi_WebUI.DTOs.ServiceDTOs
@model List<ResultServiceDTO>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Hizmetler</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @{
                                            count++;
                                        }
                                        @count
                                    </th>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><a href="~/Service/DeleteService/@item.Id/" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Service/UpdateService/@item.Id/" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="~/Service/CreateService/" class="btn btn-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
