@using ApiProjeKampi_WebUI.DTOs.ServiceDTOs
@model CreateServiceDTO
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <h4>Hizmet Ekle</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Hizmet Adı</label>
                            <input type="text" asp-for="Title" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>İkon (URL)</label>
                            <input type="text" asp-for="IconUrl" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary mr-1" type="submit">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

