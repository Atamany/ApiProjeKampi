@using ApiProjeKampi_WebUI.DTOs.MessageDTOs
@model List<ResultMessageDTO>
@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Mesajlar</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Gönderen</th>
                                <th scope="col">E-Posta</th>
                                <th scope="col">Konu</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Mesajı Aç</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @{
                                            count++;
                                        }
                                        @count
                                    </th>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Subject</td>
                                    <td>@item.SendDate.ToShortDateString()</td>
                                    <td>@item.IsRead</td>
                                    <td><a href="~/Message/MessageDetails/@item.MessageId/" class="btn btn-primary">Mesajı Aç!</a></td>
                                    <td><a href="~/Message/DeleteMessage/@item.MessageId/" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Message/UpdateMessage/@item.MessageId/" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="~/Message/CreateMessage/" class="btn btn-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
