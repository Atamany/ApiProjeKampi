@using ApiProjeKampi_WebUI.DTOs.MessageDTOs
@model UpdateMessageDTO
@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <h4>Mesaj Güncelle</h4>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="MessageId" class="form-control">
                        <div class="form-group">
                            <label>Gönderen</label>
                            <input type="text" asp-for="NameSurname" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>E-Posta</label>
                            <input type="email" asp-for="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Konu</label>
                            <input type="text" asp-for="Subject" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Mesaj</label>
                            <textarea rows="5" asp-for="MessageDetails" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="SendDate" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="IsRead" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary mr-1" type="submit">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
