@using ApiProjeKampi_WebUI.DTOs.TestimonialDTOs
@model UpdateTestimonialDTO
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <h4>Referans Güncelle</h4>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="TestimonialId" class="form-control" />
                        <div class="form-group">
                            <label>Referans</label>
                            <input type="text" asp-for="NameSurname" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Ünvan</label>
                            <input type="text" asp-for="Title" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Yorum</label>
                            <textarea rows="5" asp-for="Comment" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Resim (URL)</label>
                            <input type="text" asp-for="ImageUrl" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary mr-1" type="submit">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

