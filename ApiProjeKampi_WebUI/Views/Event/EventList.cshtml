@using ApiProjeKampi_WebUI.DTOs.EventDTOs
@model List<ResultEventDTO>
@{
    ViewData["Title"] = "EventList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Etkinlikler</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Etkinlik</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @{
                                            count++;
                                        }
                                        @count
                                    </th>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    @if(item.Status==true){
                                    <td><div class="badge badge-success">@item.Status</div></td>}
                                    @if(item.Status==false){
                                    <td><div class="badge badge-danger">@item.Status</div></td>}
                                    <td>@item.Price₺</td>
                                    <td><a href="~/Event/DeleteEvent/@item.YummyEventId/" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Event/UpdateEvent/@item.YummyEventId/" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="~/Event/CreateEvent/" class="btn btn-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>



