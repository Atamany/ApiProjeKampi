@using ApiProjeKampi_WebUI.DTOs.EventDTOs
@model UpdateEventDTO
@{
    ViewData["Title"] = "UpdateEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <h4>Etkinlik Güncelle</h4>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="YummyEventId" class="form-control" />
                        <div class="form-group">
                            <label>Etkinlik</label>
                            <input type="text" asp-for="Title" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Resim (URL)</label>
                            <input type="text" asp-for="ImageUrl" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Ücret</label>
                            <input type="number" asp-for="Price" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary mr-1" type="submit">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

