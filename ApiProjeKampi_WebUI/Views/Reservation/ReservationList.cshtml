@using ApiProjeKampi_WebAPI.DTOs.ReservationDTOs
@model List<ResultReservationDTO>
@{
    ViewData["Title"] = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Rezervasyonlar</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Müşteri</th>
                                <th scope="col">E-Posta</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Gün</th>
                                <th scope="col">Saat</th>
                                <th scope="col">Kişi Sayısı</th>
                                <th scope="col">Mesaj</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Onayla</th>
                                <th scope="col">İptal Et</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @{
                                            count++;
                                        }
                                        @count
                                    </th>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.ReservationDate.ToShortDateString()</td>
                                    <td>@item.ReservationTime</td>
                                    <td>@item.CountOfPeople</td>
                                    <td>@item.Message</td>
                                    <td>@item.ReservationStatus</td>
                                    <td><a href="~/Reservation/DeleteReservation/@item.ReservationId/" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Reservation/UpdateReservation/@item.ReservationId/" class="btn btn-warning">Güncelle</a></td>
                                    <td><a href="~/Reservation/ApproveReservation/@item.ReservationId/" class="btn btn-outline-primary">Onayla</a></td>
                                    <td><a href="~/Reservation/RejectReservation/@item.ReservationId/" class="btn btn-outline-danger">İptal Et</a></td>
                                    <td><a href="~/Reservation/HoldReservation/@item.ReservationId/" class="btn btn-outline-warning">Beklet</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="~/Reservation/CreateReservation/" class="btn btn-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
