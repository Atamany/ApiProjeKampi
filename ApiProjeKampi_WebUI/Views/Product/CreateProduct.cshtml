@using ApiProjeKampi_WebUI.DTOs.ProductDTOs
@model CreateProductDTO
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <h4>Ürün Ekle</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea rows="5" asp-for="ProductDescription" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Fiyat</label>
                            <input type="number" asp-for="Price" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Resim (URL)</label>
                            <input type="text" asp-for="ImageUrl" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Kategori</label>
                            @* <select asp-for="CategoryId" class="form-control">
                                <option value="">--Seçiniz--</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.v)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select> *@
                            <input type="number" asp-for="CategoryId" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary mr-1" type="submit">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

