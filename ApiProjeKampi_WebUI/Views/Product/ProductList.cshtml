@using ApiProjeKampi_WebUI.DTOs.ProductDTOs
@model List<ResultProductWithCategoryDTO>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Ürünler</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ürün</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @{
                                            count++;
                                        }
                                        @count
                                    </th>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductDescription</td>
                                    <td>@item.Price</td>
                                    <td>@item.CategoryName</td>
                                    <td><a href="~/Product/DeleteProduct/@item.ProductId/" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Product/UpdateProduct/@item.ProductId/" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="~/Product/CreateProduct/" class="btn btn-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>


