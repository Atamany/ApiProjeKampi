@using ApiProjeKampi_WebUI.DTOs.CategoryDTOs
@model UpdateCategoryDTO
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <h4>Kategori Güncelle</h4>
                    </div>
                    <div class="card-body">
                    <input type="hidden"asp-for="CategoryId" class="form-control">
                        <div class="form-group">
                            <label>Kategori Adı</label>
                            <input type="text" asp-for="CategoryName" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary mr-1" type="submit">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

